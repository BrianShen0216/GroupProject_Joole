@model DAL.Models.ModelUser

@{
    ViewBag.Title = "SignUp";
    //Layout = "~/Views/Shared/SignUp.cshtml";
    /*Layout = "~/Views/Shared/LoginPartial.cshtml";*/
}


<style>
    /*web background*/
    body {
        height: 100vh;
        width: 100%;
        background: linear-gradient(#322be0,white);
    }

    .container {
        display: table;
        height: 100%;
        vertical-align: middle;
    }

    .row.well {
        display: table-cell;
        vertical-align: middle;
    }

    centered columns styles
    .row-centered {
        text-align: center;
    }

    .col-centered {
        display: inline-block;
        float: left;
        text-align: center;
        margin-right: -4px;
    }

    P {
        margin-bottom: 2.5px;
    }
</style>


<div style="height: 100px"></div>
<div class="navbar navbar-inverse navbar-fixed-top"></div>

@*<button id="clkbutton" type="button">Back</button>*@
<button class="btn btn-primary" onclick="location.href='@Url.Action("Login","Home")'">Back</button>

<div class="container">
    <div class="row row-centered">
        <div class="well col-md-11">
            <h4 align="left">Register as User</h4>
            <hr />
            <div class="col-md-11">
                <div class="d-flex aligns-items-center justify-content-center">
                    <label>Image Preview</label>
                </div>
                <div class="d-flex aligns-items-center justify-content-center">
                    <img src="~/Image/Image.png" width="120" height="120" alt="" />
                </div>
                <div class="d-flex aligns-items-center justify-content-center">
                    <label>Your Profile Pic</label>
                </div>
                <div class="d-flex aligns-items-center justify-content-center">
                    <button>Choose File</button><label>No file choseen</label>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-label">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label float-start" })
                        </div>
                        <div class="col-md-offset-4">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control float-end" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>

                        <br />
                        <br />

                        <div class="">
                            @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label float-start" })
                            <div class="col-md-offset-4">
                                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control float-end" } })
                                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
                        <br />

                        <div class="form-group">
                            @Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label float-start" })
                            <br />
                            <div class="col-md-offset-4">
                                @*@Html.PasswordFor(model => model.UserPassword, new { style = "width:940px", @class = "form-input" })*@
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control float-end" } })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
   
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserConPassword, htmlAttributes: new { @class = "control-label float-start" })
                            <br />
                            <div class="col-md-offset-4">
                                @*@Html.PasswordFor(model => model.UserConPassword, new { style = "width:940px", @class = "form-input" })*@
                                @Html.EditorFor(model => model.UserConPassword, new { htmlAttributes = new { @class = "form-control float-end" } })
                                @Html.ValidationMessageFor(model => model.UserConPassword, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <br />
                        <br />

                        <div class="form-group ">
                            <div class="float-end">
                                <br />
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
